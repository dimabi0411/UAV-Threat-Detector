generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"] 
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Threat {
  id        Int      @id @default(autoincrement())
  location String
  radius    Float
  speed     Float
  planes    Plane[]
}

model Plane {
  id            Int      @id @default(autoincrement())
  icao24        String
  callSign      String?
  originCountry String?
  lastUpdated   DateTime
  latitude      Float
  longitude     Float
  altitude      Float
  heading       Float
  velocity      Float
  onGround      Boolean
  squawk        String?
  threat        Threat   @relation(fields: [threatId], references: [id])
  threatId      Int
}


